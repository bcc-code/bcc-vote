{
  "host": "localhost",
  "port": 3030,
  "public": "../public/",
  "paginate": {
    "default": 10,
    "max": 50
  },
  "authentication": {
    "oauth": {
      "redirect": "BCC_MEMBERS_AUTH_SUCCESS_CLIENT_REDIRECT",
      "auth0": {
        "scope": ["openid", "profile", "email", "church", "country"],
        "key": "BCC_MEMBERS_AUTH0_CLIENT_KEY",
        "secret": "BCC_MEMBERS_AUTH0_CLIENT_SECRET",
        "subdomain": "BCC_MEMBERS_AUTH0_SUBDOMAIN"
      }
    },
    "entity": "user",
    "service": "person",
    "entityId": "_key",
    "secret": "FEATHERS_JWT_HS256_SECRET",
    "authStrategies": ["jwt", "auth0", "apiKey"],
    "apiKey": {
      "allowedKey": "BCC_API_KEY",
      "header": "x-access-token",
      "urlParam": "token"
    },
    "jwtOptions": {
      "header": {
        "typ": "access"
      },
      "audience": "https://login.bcc.no",
      "issuer": "feathers",
      "algorithm": "HS256",
      "expiresIn": "1d"
    }
  },
  "arangodDB": {
    "username": "BCC_MEMBERS_ARANGODB_USERNAME",
    "password": "BCC_MEMBERS_ARANGODB_PASSWORD",
    "url": "BCC_MEMBERS_ARANGODB_URL",
    "database": "BCC_MEMBERS_ARANGODB_DATABASE"
  }
}
