{
  "host": "localhost",
  "port": 3030,
  "public": "../public/",
  "paginate": {
    "default": 10,
    "max": 50
  },
  "authentication": {
    "oauth": {
      "redirect": "BCC_MEMBERS_AUTH_SUCCESS_CLIENT_REDIRECT",
      "auth0": {
        "scope": ["openid", "profile", "email", "church", "country"],
        "key": "BCC_MEMBERS_AUTH0_CLIENT_KEY",
        "secret": "BCC_MEMBERS_AUTH0_CLIENT_SECRET",
        "subdomain": "BCC_MEMBERS_AUTH0_SUBDOMAIN"
      }
    },
    "entity": "user",
    "service": "users",
    "secret": "FEATHERS_JWT_HS256_SECRET",
    "authStrategies": [
      "jwt",
      "local",
      "auth0"
    ],
    "jwtOptions": {
      "header": {
        "typ": "access"
      },
      "audience": "https://login.bcc.no",
      "issuer": "feathers",
      "algorithm": "HS256",
      "expiresIn": "1d"
    },
    "local": {
      "usernameField": "email",
      "passwordField": "password"
    }
  },
  "nedb": "../data"
}
